generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Website{
  id String @default(uuid()) @id
  name String
  createdAt DateTime
  ticks WebsiteTick[]
 
}

model Region{
  id String @default(ulid()) @id
  regionName String
  ticks WebsiteTick[]

}

model WebsiteTick {
  id String @id @default(uuid())
  response_time_ms Int
  status  WebsiteStatus
  regionId String
  websiteId String
  region Region @relation(fields: [regionId], references: [id])
  website Website @relation(fields: [websiteId], references: [id])

}

enum WebsiteStatus {
  up
  down
  unknown
}