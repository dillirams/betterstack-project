generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User{
  id String @default(uuid()) @id
  name String @unique
  password String
  website Website[]
}

model Website{
  id String @default(uuid()) @id
  url String
  createdBy String
  createdAt DateTime
  user User @relation(fields: [createdBy], references: [id])
  ticks WebsiteTick[]
 
}

model Region{
  id String @default(ulid()) @id //8fa555fa-15c7-4cb1-bf9c-810c052eb50a
  regionName String
  ticks WebsiteTick[]

}

model WebsiteTick {
  id String @id @default(uuid())
  response_time_ms Int
  status  WebsiteStatus
  regionId String
  websiteId String
  region Region @relation(fields: [regionId], references: [id])
  website Website @relation(fields: [websiteId], references: [id])
  createdAT DateTime @default(now())

}

enum WebsiteStatus {
  up
  down
  unknown
}